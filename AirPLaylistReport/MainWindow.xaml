<Window x:Class="AirPLaylistReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Loaded="OnLoad"
        xmlns:local="clr-namespace:AirPLaylistReport"
        mc:Ignorable="d"
        Title="Air Playlist Export" Height="500" Width="450" Icon="/Resource/Icon1.ico" WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Button x:Name="btnOpen" Content="Открыть файлы" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="41" Width="148" Click="btnOpen_Click"/>
        <Button x:Name="btnExport" Content="Объединить" HorizontalAlignment="Center" Margin="0,391,0,0" VerticalAlignment="Top" Height="41" Width="148" Click="Button_Click"/>
        <ListBox x:Name="listbox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="88,141,88,114" SelectionChanged="ListBox_SelectionChanged"/>
        <Label Content="Выбери файлы Air Playlist" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" Width="150" BorderBrush="#FFF11D1D" Background="White"/>

    </Grid>
</Window>
