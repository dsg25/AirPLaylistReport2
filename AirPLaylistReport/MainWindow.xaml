<Window x:Class="AirPLaylistReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Loaded="OnLoad"
        xmlns:local="clr-namespace:AirPLaylistReport"
        mc:Ignorable="d"
        Title="Air Playlist Export" Height="500" Width="850" Icon="/Icon1.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnOpen" Content="Открыть файлы" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="41" Width="148" Click="btnOpen_Click"/>
        <TextBox x:Name="textbox" HorizontalAlignment="Center" Margin="0,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="399" Height="24" Background="#FFE9E9E9"/>
        <Button x:Name="btnExport" Content="Объединить" HorizontalAlignment="Center" Margin="0,405,0,0" VerticalAlignment="Top" Height="41" Width="148" Click="Button_Click"/>
        <TextBlock x:Name="textblock" HorizontalAlignment="Left" Margin="166,258,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="43" Width="301"/>

    </Grid>
</Window>
